{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Storage App",
  "version": "0.1.0",
  "identifier": "com.felipesantos.storage-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Storage App",
        "width": 400,
        "height": 400,
        "minWidth": 350,
        "minHeight": 300,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Felipe Santos",
    "copyright": "Copyright Â© 2025 Felipe Santos",
    "category": "Utility",
    "shortDescription": "Upload images to Cloudflare R2",
    "longDescription": "Desktop app for uploading images to Cloudflare R2 with instant link copying"
  }
}
